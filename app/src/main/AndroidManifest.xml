<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.onyanov.itschanging">

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
         />

    <application
        android:name="ru.onyanov.itschanging.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="ru.onyanov.itschanging.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.onyanov.itschanging.ProjectActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name="ru.onyanov.itschanging.ProjectFormActivity"
            android:label="@string/project_edit"
            android:theme="@style/AppTheme.Dark"
            android:windowSoftInputMode="stateVisible" />

        <activity
            android:name="ru.onyanov.itschanging.SlideshowActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme"/>
    </application>

</manifest>
